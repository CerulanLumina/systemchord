pkgname='systemchord'
pkgver=git
pkgrel=1
pkgdesc='Sends commands in response to chords--any combination of keys.'
url="https://github.com/CerulanLumina/systemchord"
license=("MPL-2.0")
arch=("x86_64")
source=("$pkgname::git+https://github.com/CerulanLumina/systemchord.git")
sha256sums=(SKIP)

pkgver() {
    cd "$pkgname"
    printf "r%s.%s" "$(git rev-list --count HEAD)" "$(git rev-parse --short=7 HEAD)"
}

depends=(gcc-libs glibc)
makedepends=(cargo)

prepare() {
    export RUSTUP_TOOLCHAIN=stable
    cargo fetch --locked --target "$(rustc -vV | sed -n 's/host: //p')"
}

build() {
    export RUSTUP_TOOLCHAIN=stable
    export CARGO_TARGET_DIR=target
    cargo build --frozen --release
}

check() {
    export RUSTUP_TOOLCHAIN=stable
    cargo test --frozen --all-features
}

package() {
    install -Dm0755 -t "$pkgdir/usr/bin/" "target/release/$pkgname"
    install -Dm0644 -t "$pkgdir/usr/lib/systemd/user/" "$srcdir/$pkgname/dist/systemd/$pkgname.service"
}
